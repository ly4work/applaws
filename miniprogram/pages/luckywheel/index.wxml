<!--miniprogram/pages/home/index.wxml-->
<view>

  <!-- 图层区域 -->
  <view class="layer">

    <!-- 天气图层 -->
    <view class="weather-layer">
      <image src="./../../images/home/weather/1.png" mode="scaleToFill"></image>
    </view>
  </view>

  <!-- 规则button -->
  <view class="rules-layer">
    活动规则
  </view>
  <!-- 转盘区域 -->
  <view class="wheel-layer">
    <view class="wheel">
      <image src="./../../images/luckywheel/wheel.png" mode="scaleToFill"></image>
    </view>
    <view class="lucky">
      <view class="base-pointer">
        <image src="./../../images/luckywheel/lucky-btn.png" mode="scaleToFill"></image>
      </view>
      <view class="pointer">
        <image src="./../../images/luckywheel/pointer.png" mode="scaleToFill"></image>
      </view>
    </view>
  </view>
  <!-- 用户操作区域 -->
  <view class="operation ope-{{status}}">
    <!-- status: 7 -->
    <view class="sts7">
      <view class="btn-group">
        <view class="btn7 btn-prev">
          <image src="./../../images/home/buttons/prev.png"></image>
        </view>
        <view class="btn7 btn-next">
          <image src="./../../images/home/buttons/my_gift.png"></image>
        </view>
      </view>
    </view>
  </view>

  <!-- footer -->
  <view class="footer" wx:if="{{status === 1}}">
    最终解释权归applaws所有
  </view>
</view>