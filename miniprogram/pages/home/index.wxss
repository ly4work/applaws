/* miniprogram/pages/home/index.wxss */

/* 图层区域 */
.layer {
  position: fixed;
  width: 100vw;
  height: 100vh;
  z-index: 10;
  top: 0;
}

.music-layer {
  position: fixed;
  width: 60rpx;
  height: 60rpx;
  right: 30rpx;
  top: 30rpx;
}

.music-layer image {
  width: 100%;
  height: 100%;
}

.rotate {
  animation: rotating 5s linear infinite
}

@keyframes rotating {
  from {
    transform: rotate(0)
  }
  to {
    transform: rotate(360deg)
  }
}

.slogan-layer {
  position: absolute;
  z-index: 1;
  width: 100%;
}

.s-l-box {
  width: 596rpx;
  margin: 30rpx auto;
}

.s-l-box .slogan1 {
  width: 220rpx;
  height: 98rpx;
}

.s-l-box .slogan2 {
  width: 596rpx;
  height: 154rpx;
  margin-top: -20rpx;
}

.weather-layer {
  width: 100%;
  height: 100%;
}

.weather-layer image {
  width: 100%;
  height: 100%;
}

/* 操作区域 */
.operation {
  position: absolute;
  z-index: 50;
  bottom: 58rpx;
  width: 100%;
}

.sts1 {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn1 {
  width: 438rpx;
  height: 154rpx;
}

.btn1 image {
  width: 100%;
  height: 100%;
}

.footer {
  width: 100%;
  position: absolute;
  bottom: 20rpx;
  text-align: center;
  font-size: 24rpx;
  z-index: 20;
  color: #666;
}